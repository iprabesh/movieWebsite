<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :movie_title %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.select :rating, Movie::RATINGS, prompt: "Pick One!" %>
  </div>

  <div class="field">
    <%= form.label :total_gross %>
    <%= form.text_field :total_gross, id: :movie_total_gross %>
  </div>

   <div class="field">
    <%= form.label :released_on %>
    <%= form.date_field :released_on, id: :movie_released_on %>
  </div>

  <div class="field">
    <%= form.label :cast %>
    <%= form.text_field :cast, id: :movie_cast %>
  </div>

  <div class="field">
    <%= form.label :director %>
    <%= form.text_field :director, id: :movie_director %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.text_field :duration, id: :movie_duration %>
  </div>

   <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image_file_name, id: :movie_image_file_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :movie_description %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
